{
  "version": 2,
  "builds": [
    {
      "src": "admin/js/**/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "src/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["public/**", "admin/**", "cliente/**", "assets/**"]
      }
    }
  ],
  "routes": [
    { "src": "/admin/js/(.*\\.js)", "dest": "admin/js/$1" },
    { "src": "/(.*)", "dest": "src/server.js" }
  ]
}
